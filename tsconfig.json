{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "incremental": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "paths": {
      "src/*": [
        "./*"
      ],
      // We define this path for all files/folders inside
      // components folder:
      "components/*": [
        "components/*"
      ],
      // We define this path for the index.ts file inside the
      // components folder:
      "components": [
        "components"
      ],
      "assets/*": [
        "assets/*"
      ],
      "assets": [
        "assets"
      ],
      "config/*": [
        "config/*"
      ],
      "config": [
        "config"
      ],
      "const/*": [
        "const/*"
      ],
      "const": [
        "const"
      ],
      "stores/*": [
        "stores/*"
      ],
      "stores": [
        "stores"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "hooks": [
        "hooks"
      ],
      "providers/*": [
        "providers/*"
      ],
      "providers": [
        "providers"
      ],
      "types/*": [
        "types/*"
      ],
      "types": [
        "types"
      ]
      // "i18n/*": [
      //   "i18n/*"
      // ],
      // "i18n": [
      //   "i18n"
      // ]
    },
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "import/no-unresolved": "error"
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": [
          "packages/dapp/tsconfig.json",
          "packages/shared/tsconfig.json"
        ]
      }
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
